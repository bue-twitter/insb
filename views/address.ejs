
<div class="container" >
  <div class="row clearfix">
    <div class="col-lg-12 btn-lg">
      <ul class="breadcrumb">
        <li><a href="/">首页</a> <span class="divider"></span></li>
        <li><a href="/address">地址</a><span class="divider"></span></li>
        <li class="active" style="word-break: break-all;word-wrap: break-word;"><%=address._id%></li>
      </ul>
    </div>
  </div>
  <div class="row clearfix">
    <div class="col-lg-8">
      <table class="table table-striped table-hover">
        <tbody>
        <tr>
          <td class="col-md-2" style='vertical-align: middle;text-align: right;'>地址</td>
          <td class="col-md-4" style='vertical-align: middle;text-align: left;'><%=address._id%></td>
        </tr>
        <tr>
          <td class="col-md-2" style='vertical-align: middle;text-align: right;'>余额</td>
          <td class="col-md-4" style='vertical-align: middle;text-align: left;'><%=address.balance/100000000%></td>
        </tr>
        <tr>
          <td class="col-md-2" style='vertical-align: middle;text-align: right;'>信用</td>
          <td class="col-md-4" style='vertical-align: middle;text-align: left;'><%=address.credit%></td>
        </tr>
        <tr>
          <td class="col-md-2" style='vertical-align: middle;text-align: right;'>地址生成时间</td>
          <td class="col-md-4" style='vertical-align: middle;text-align: left;'><%=unix2Date(address.firsttime)%></td>
        </tr>
        <tr>
          <td class="col-md-2" style='vertical-align: middle;text-align: right;'>最近交易时间</td>
          <td class="col-md-4"
              style='vertical-align: middle;text-align: left;'><%=unix2Date(address.time)%></td>
        </tr>
        <tr>
          <td class="col-md-2" style='vertical-align: middle;text-align: right;'>交易次数</td>
          <td class="col-md-4"
              style='vertical-align: middle;text-align: left;'><%=address.txs.length%> 次
          </td>
        </tr>
        </tbody>
      </table>
    </div>
    <div class="col-lg-4">
      <div class="row">
        <div class="col-lg-12" style="text-align: center">
          <img style="height: 180px;width: 180px;" src="/create_qrcode/<%=address._id%>">
        </div>
        <div class="col-lg-12" style="text-align: center">
          扫码转账
        </div>
      </div>
    </div>
    <div class="col-lg-12">
      <h2>交易列表</h2>
      <ul>
        <% for (var x in address.txs) {%>
        <li><a href ="/transaction/<%=address.txs[x]%>"><%=address.txs[x]%></a></li>
        <% } %>
      </ul>
    </div>
  </div>

</div>
