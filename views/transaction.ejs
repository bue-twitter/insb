<div class="container">
  <div class="row clearfix">
    <div class="col-lg-12 btn-lg">
      <ul class="breadcrumb">
        <li><a href="/">首页</a> <span class="divider"></span></li>
        <li><a href="/transaction">交易</a><span class="divider"></span></li>
        <li class="active" style="word-break: break-all;"><%=tx.hash%></li>
      </ul>
    </div>
  </div>
  <div class="row clearfix">
    <div class="col-lg-12">
      <table class="table table-striped table-hover" style="table-layout:fixed">
        <tbody>
        <tr>
          <td class="col-xs-3" style='vertical-align: middle;text-align: right;'>交易类型</td>
          <td class="col-xs-9" style='vertical-align: middle;text-align: left;'><%=tx.type%></td>
        </tr>
        <tr>
          <td class="col-xs-3" style='width:10%;vertical-align: middle;text-align: right;'>散列值</td>
          <td class="col-xs-9" style='width:60%;overflow:hidden;white-space:nowrap;text-overflow:ellipsis;vertical-align: middle;text-align: left;'><%=tx.hash%></td>
        </tr>
        <tr>
          <td class="col-xs-3" style='vertical-align: middle;text-align: right;'>时间</td>
          <td class="col-xs-4" style='vertical-align: middle;text-align: left;'><%=unix2Date(tx.time)%></td>
        </tr>
        <tr>
          <td class="col-xs-3" style='vertical-align: middle;text-align: right;'>手续费</td>
          <td class="col-xs-9" style='vertical-align: middle;text-align: left;'><%=tx.fee/100000000%> INS</td>
        </tr>
        <tr>
          <td class="col-xs-3" style='vertical-align: middle;text-align: right;'>版本</td>
          <td class="col-xs-9" style='vertical-align: middle;text-align: left;'><%=tx.version%></td>
        </tr>
        <tr>
          <td class="col-xs-3" style='vertical-align: middle;text-align: right;'>所在区块</td>
          <td class="col-xs-9" style='vertical-align: middle;text-align: left;'><a
                    href="/block/<%=tx.height%>"><%=tx.height%></a></td>
        </tr>
        </tbody>
      </table>
    </div>
    <div class="col-lg-12">
      <% if (tx.inputs.length>0) {%>
        <h2>输入</h2>
        <table class=table table-striped table-hover" style="table-layout:fixed">
        <thead>
          <tr><th style='width:50%;vertical-align: middle;text-align: center;'>fromTx</th>
              <th style='width:5%;vertical-align: middle;text-align: center;'> fromIndex </th>
              <th style='width:40%;vertical-align: middle;text-align: center;'> address </th>
              <th style='width:5%;vertical-align: middle;text-align: center;'> value </th></tr>
        </thead>
        <tbody>
        <% tx.inputs.forEach(function(x){%>
        <tr><td style='overflow:hidden;white-space:nowrap;text-overflow:ellipsis;vertical-align: middle;text-align: center;'><a href ="/transaction/<%=x.fromTx%>"><%=x.fromTx%></a></td>
        <td><%=x.fromIndex%></td>
        <td style='overflow:hidden;white-space:nowrap;text-overflow:ellipsis;vertical-align: middle;text-align: center;'><a href="/address/<%=x.address%>"><%=x.address%></a></td> <td><%=x.value/100000000%></td></tr>
        <% }) %>
        </tbody>
        </table>
      <%}%>
      <% if (tx.outputs.length>0) {%>
        <h2>输出</h2>
        <table class=table table-striped table-hover" style="table-layout:fixed">
        <thead>
        <tr><th>value</th> <th> lockTime </th><th> address </th></tr>
        </thead>
        <tbody>
        <% tx.outputs.forEach(function(x){%>
        <tr><td><%=x.value/100000000%></td>
        <td><%=x.lockTime>9999999?unix2Date(x.lockTime):x.lockTime%></td>
        <td><a href="/address/<%=x.address%>"><%=x.address%></a></td></tr>
        <% }) %>
        </tbody>
        </table>
      <%}%>
    </div>
  </div>

</div>