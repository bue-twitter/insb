<div class="container">
  <div class="row clearfix">
    <div class="col-lg-12 btn-lg">
      <ul class="breadcrumb">
        <li><a href="/">首页</a> <span class="divider"></span></li>
        <li><a href="/block">区块</a><span class="divider"></span></li>
        <li class="active"><%=block.height%></li>
      </ul>
    </div>
  </div>
  <div class="row clearfix">
    <div class="col-lg-12">
      <table class="table table-striped table-hover" style="table-layout:fixed">
        <tbody>
        <tr>
          <td class="col-md-2" style='width:20%;vertical-align: middle;text-align: right;'>高度</td>
          <td class="col-md-4" style='width:40%;vertical-align: middle;text-align: left;'><%=block.height%></td>
        </tr>
        <tr>
          <td class="col-md-2" style='vertical-align: middle;text-align: right;'>时间</td>
          <td class="col-md-4" style='vertical-align: middle;text-align: left;'><%=unix2Date(block.time*1000)%></td>
        </tr>
        <tr>
          <td class="col-md-2" style='vertical-align: middle;text-align: right;'>周期开始</td>
          <td class="col-md-4" style='vertical-align: middle;text-align: left;'><%=unix2Date(block.periodStartTime*1000)%></td>
        </tr>
        <tr>
          <td class="col-md-2" style='vertical-align: middle;text-align: right;'>周期时间</td>
          <td class="col-md-4" style='vertical-align: middle;text-align: left;'><%=block.timePeriod%></td>
        </tr>
        <tr>
          <td class="col-md-2" style='vertical-align: middle;text-align: right;'>默克尔hash</td>
          <td class="col-md-4"
              style='overflow:hidden;white-space:nowrap;text-overflow:ellipsis;vertical-align: middle;text-align: left;'><%=block.merkleHash%></td>
        </tr>
        <tr>
          <td class="col-md-2" style='vertical-align: middle;text-align: right;'>上一块hash</td>
          <td class="col-md-4"
              style='overflow:hidden;white-space:nowrap;text-overflow:ellipsis;vertical-align: middle;text-align: left;'>
            <a href="/block/<%=block.preHash%>"><%=block.preHash%></a></td>
        </tr>
        <tr>
          <td class="col-md-2" style='vertical-align: middle;text-align: right;'>当前块hash</td>
          <td class="col-md-4"
              style='overflow:hidden;white-space:nowrap;text-overflow:ellipsis;vertical-align: middle;text-align: left;'><%=block.hash%></td>
        </tr>
        <tr>
          <td class="col-md-2" style='vertical-align: middle;text-align: right;'>交易数</td>
          <td class="col-md-4" style='vertical-align: middle;text-align: left;'><%=block.txCount%></td>
        </tr>
        <tr>
          <td class="col-md-2" style='vertical-align: middle;text-align: right;'>手续费</td>
          <td class="col-md-4" style='vertical-align: middle;text-align: left;'><%= block.fee?block.fee/100000000:0 %> INS</td>
        </tr>
        <tr>
          <td class="col-md-2" style='vertical-align: middle;text-align: right;'>版本</td>
          <td class="col-md-4" style='vertical-align: middle;text-align: left;'><%=block.version%></td>
        </tr>
        <tr>
          <td class="col-md-2" style='vertical-align: middle;text-align: right;'>共识地址</td>
          <td class="col-md-4"
              style='overflow:hidden;white-space:nowrap;text-overflow:ellipsis;vertical-align: middle;text-align: left;'><%=block.consensusAddress%></td>
        </tr>
        </tbody>
      </table>
    </div>
    <div class="col-lg-12">
      <h2>当前块交易： <%=block.txCount%></h2>
      <table class=table table-striped table-hover" style="table-layout:fixed">
        <thead>
          <tr><th style='width:40%;vertical-align: middle;text-align: center;'> hash</th> <th> type </th><th> time </th><th>address </th></tr>
        </thead>
        <tbody>
        <% block.txs.forEach(function(x){%>
          <tr><td style='overflow:hidden;white-space:nowrap;text-overflow:ellipsis;vertical-align: middle;text-align: center;'><a href ="/transaction/<%=x.hash%>"><%=x.hash%></a></td>
          <td><%=x.type%></td>
          <td><%=unix2Date(x.time)%></td> <td><%=x.address%></td></tr>
        <% }) %>
        </tbody>
      </table>
    </div>
  </div>

</div>

